<Window x:Class="Client.Main.SendMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Send Message" Height="300" Width="396.8" ShowInTaskbar="False" WindowStartupLocation="CenterScreen">
    <Grid Margin="10,0,-0.6,0.4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="19*"/>
        </Grid.ColumnDefinitions>
        <TextBox Name="txtMessage" HorizontalAlignment="Left" Height="166" Margin="10,29,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="303" Grid.Column="1"/>
        <Button Content="Send" Grid.Column="1" HorizontalAlignment="Left" Margin="238,223,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
